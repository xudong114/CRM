@section scripts{
    <script src="~/Scripts/json2.min.js"></script>
    <script src="~/Scripts/juicer-min.js"></script>
    <script>
        $().ready(function () {

            $('.nav.nav-tabs.pull-left.client_tab li').each(function (n, ele) {

                $(this).click(function () {
                    $('.nav.nav-tabs.pull-left.client_tab li').removeClass('client_sel client_sel_left');
                    if (n == 0) {
                        $(this).addClass('client_sel_left');
                    } else {
                        $(this).addClass('client_sel');
                    }
                });
            });

            $('#btnSaveActivity').click(function () {
                var clientId = '@Model.Client.Id';
                var cateId = $('#ActivityCategories').val();
                var content = $('#client_activity_content').val();
                if (content == '')
                    return;
                $.ajax({
                    type: "post",
                    dataType: "json",
                    url: "/client/CreateActivity",
                    data: { clientId: clientId, cateId: cateId, content: content },
                    success: function (data) {
                        $('#client_activity_content').val('');
                        var data = JSON.parse(data);
                        var tpl = document.getElementById('tplActivity').innerHTML;
                        var html = $(juicer(tpl, data)).hide();
                        $('.comment-list.block').prepend(html);
                        html.fadeIn(2000);
                    },
                    error: function (arg1, arg2, arg3) {
                        alert(arg3);
                    }
                });
            });

            juicer.set({
                'tag::operationOpen': '{@@',
                'tag::operationClose': '}',
                'tag::interpolateOpen': '${',
                'tag::interpolateClose': '}',
                'tag::noneencodeOpen': '$${',
                'tag::noneencodeClose': '}',
                'tag::commentOpen': '{#',
                'tag::commentClose': '}'
            });

        });
    </script>

    <script id="tplActivity" type="text/template">

        {@@each List as item,index}
        <article id="comment-id-1" class="comment-item">
            <a class="pull-left thumb-sm avatar activity_category_icon"> <img class="icon_location" /> </a> <span class="arrow left"></span>
            <section class="comment-body panel panel-default">
                <header class="panel-heading bg-white">
                    <a href="#">${item.UserName} ${item.ActivityCategoryName}</a>
                    {@@if item.CreatedDate !=  item.ModifiedDate }
                    <label class='label bg-info m-l-xs'>已编辑</label>
                    {@@/if}
                    <span class="text-muted m-l-sm pull-right"> <i class="fa fa-clock-o"></i> ${item.TimeLabel} </span>
                </header>
                <div class="panel-body">
                    <div>
                        ${item.Content}
                    </div>
                    <div class="comment-action m-t-sm">
                        <a href="#comment-form" class="btn btn-default btn-xs">
                            <i class="fa fa-mail-reply text-muted"></i> 评论
                        </a>
                    </div>
                </div>
            </section>
        </article>
        {@@/each}

    </script>
}


