@model Ingenious.DTO.Base_ProfileDTOListWithPagination
@{
    ViewBag.Title = "Index";
}

@section scripts{

    <script>
        $().ready(function () {

        });
    </script>
}
<ul class="breadcrumb no-border no-radius b-b b-light pull-in">
    <li><a href="#"><i class="fa fa-home"></i> 基础数据管理</a></li>
    @*<li class="active">Workset</li>*@
</ul>
<section class="panel panel-default">
    <header class="panel-heading"> 数据列表 </header>
    <div class="row text-sm wrapper">
        <div class="col-sm-3 m-b-xs">
            <a class="btn btn-sm btn-primary" href="/globaldata/profile/create"> 新建数据</a>
        </div>

    </div>
    <div class="table-responsive">
        <table class="table table-striped b-t b-light text-sm">
            <thead>
                <tr>
                    <th width="20"><input type="checkbox"></th>
                    <th>姓名</th>
                    <th>手机号码</th>
                    <th>微信</th>
                    <th>身份证号码</th>
                    <th>关联</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in @Model.Rows)
                    {
                        <tr>
                            <td><input type="checkbox" name="post[]" value="3"></td>
                            <td> <a href="/globaldata/profile/details/@item.IDNo">@item.Name</a> </td>
                            <td>@item.PersonalPhone</td>
                            <td>@item.Wechat</td>
                            <td>@item.IDNo</td>
                            <td>

                                <a href="/globaldata/profile/realestate/@item.IDNo"><i class="fa fa-plus"></i>不动产</a>
                                <a href="/globaldata/profile/car/@item.IDNo" style="margin-left:10px;"><i class="fa fa-plus"></i>车辆</a>
                                <a href="/globaldata/profile/factory/@item.IDNo" style="margin-left:10px;"><i class="fa fa-plus"></i>工厂</a>
                                <a href="/globaldata/profile/store/@item.IDNo" style="margin-left:10px;"><i class="fa fa-plus"></i>门店</a>
                                <a href="/globaldata/profile/account/@item.IDNo" style="margin-left:10px;"><i class="fa fa-plus"></i>账户</a>
                               
                            </td>
                            <td>
                                <a href="/globaldata/profile/edit/@item.Id"><i class="fa fa-edit"></i></a>
                                <a href="/globaldata/profile/delete/@item.Id" style="margin-left:30px;"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>

</section>
