@model Ingenious.DTO.G_UserDetailDTO
@{
    ViewBag.Title = "Create";
}
<ul class="breadcrumb no-border no-radius b-b b-light pull-in">
    <li><a href="/app/user/index"><i class="fa fa-home"></i>用户管理</a></li>
    <li class="active">用户详情</li>
</ul>

<div>
    <section class="panel panel-default">
        <header class="panel-heading font-bold">用户详情</header>
        <div class="panel-body">
            <form class="form-horizontal">


                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.Face, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @{
                            if (!string.IsNullOrWhiteSpace(Model.Face))
                            {
                                <img src="@Model.Face" />
                            }
                            else
                            {
                                <p class="form-control-static">-</p>
                            }
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.Name @(Model.Gender ? "（先生）" : "（小姐）")</p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NickName, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.NickName</p>
                    </div>
                </div>
               
                <div class="form-group">
                    @Html.LabelFor(model => model.IDNo, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.IDNo</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.Title</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.OfficePhone, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.OfficePhone</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PersonalPhone, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.PersonalPhone</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.QQ, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.QQ</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Wechat, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.Wechat</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.Email</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("地区", new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.Province @Model.City @Model.Country</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Street, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.Street</p>
                    </div>
                </div>
                @{
                    if (!string.IsNullOrWhiteSpace(Model.BankName))
                    {
                        <div class="form-group">
                            @Html.Label("所属银行", new { @class = "col-lg-2 control-label" })
                            <div class="col-lg-10">
                                <p class="form-control-static">@Model.BankName</p>
                            </div>
                        </div>
                    }
                }
                
                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.IsActiveName</p>
                    </div>
                </div>


                <div class="form-group">
                    @Html.Label("创建日期", new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        <p class="form-control-static">@Model.CreatedDate.ToString("yyyy-MM-dd")</p>
                    </div>
                </div>
                <hr />
                <div class="form-group pull-left">
                    <div class="col-lg-offset-2 col-lg-10">
                        <a href="/jiajudai/sys/user" class="btn btn-sm btn-default">取消</a>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
