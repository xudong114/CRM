@model Ingenious.DTO.G_LoanProductDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <link rel="stylesheet" type="text/css" href="~/Areas/JJD/Content/css/mui.css" />
    <link href="~/Areas/JJD/Content/css/01.index/index.css" rel="stylesheet" />
    <title></title>
</head>

<body>
    <header class="mui-bar mui-bar-nav violet">
        <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
        <h1 class="mui-title">@Model.Name</h1>
    </header>
    <div class="mui-content loanKind">
        <div class="loanKindHeader">
            <p>贷款年化利率</p>
            <span>@Model.Rate</span>
        </div>
        <div class="loanDetail">
            <div class="loanDetailHead">
                <div>
                    <p>可贷金额</p>
                    <span>@Model.Loan</span>
                </div>
                <div>
                    <p>还款方式</p>
                    <span>@Model.Terms</span>
                </div>
                <img class="l" src="~/Areas/JJD/Content/images/01.index/zhuanshi.png" />
                <img class="r" src="~/Areas/JJD/Content/images/01.index/zhuanshi.png" />
            </div>
            <div class="loanText">
                <h1>租金贷申请条件</h1>
                <p>
                    @Html.Raw(@Model.Policy)
                </p>
                <a href="/jiajudai/order/step01?product=@Model.Code">立即申请</a>
            </div>
        </div>
    </div>

</body>

</html>

<script src="~/Areas/JJD/Content/js/mui.js"></script>