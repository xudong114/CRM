@model List<Ingenious.DTO.G_LoanProductDTO>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <link rel="stylesheet" type="text/css" href="~/Areas/JJD/Content/css/mui.css" />
    <link rel="stylesheet" href="~/Areas/JJD/Content/css/01.index/index.css" />
    <title></title>
</head>

<body>
    <div id="check" style="display: none" class="a2"></div>
    <header class="mui-bar mui-bar-nav violet">
        <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
        <h1 class="mui-title">贷款产品</h1>
    </header>
    <div class="mui-content proLoanList">
        <ul>
            @{
                foreach (var item in Model)
                {
                    <li>
                        <a href="/jiajudai/product/@item.Id.ToString("N")">
                            <div class="loanTitle">
                                <img src="@item.Logo" /><span>@item.Name</span>
                                <h6>@item.Tip</h6>
                            </div>
                            <div class="mes">
                                <div>
                                    <b>@item.Loan.Replace("万", "")<span>万</span></b>
                                    <h5>可贷金额</h5>
                                </div>
                                <div>
                                    <p>@item.Rate</p>
                                    <h5>贷款利息</h5>
                                </div>
                                <div>
                                    <p>@item.Terms</p>
                                    <h5>还款方式</h5>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            }

        </ul>
    </div>

    <script src="~/Areas/JJD/Content/js/mui.js"></script>
    @Html.Action("Navbar", "Partial")
</body>

</html>