@model Ingenious.DTO.PriceStrategyDTOList
@{
    ViewBag.Title = "Index";
}


@section scripts{

    <script>
        $().ready(function () {

        });
    </script>
}
<ul class="breadcrumb no-border no-radius b-b b-light pull-in">
    <li><a href="index.html"><i class="fa fa-home"></i> 价格策略管理</a></li>
    @*<li class="active">Workset</li>*@
</ul>
<section class="panel panel-default">
    <header class="panel-heading"> 价格策略列表 </header>
    <div class="row text-sm wrapper">
        <div class="col-sm-3 m-b-xs">
            <a class="btn btn-sm btn-primary" href="/admin/pricestrategy/create"> 新建价格策略</a>
        </div>
        
    </div>
    <div class="table-responsive">
        <table class="table table-striped b-t b-light text-sm">
            <thead>
                <tr>
                    <th width="20"><input type="checkbox"></th>
                    <th class="th-sortable" data-toggle="class">名称 <span class="th-sort"> <i class="fa fa-sort-down text"></i> <i class="fa fa-sort-up text-active"></i> <i class="fa fa-sort"></i> </span> </th>
                    <th>标准价格</th>
                    <th>经销商标准价格</th>
                    <th>备注</th>
                    <th>执行时间</th>
                    <th>终止时间</th>
                    <th>创建时间</th>
                    <th>创建人</th>
                    <th width="30"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in @Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="post[]" value="3"></td>
                            <td><a href="/admin/pricestrategy/detail/@item.Id" @(item.PriceStrategyDetailList.Count == 0 ? "title=未设置价格信息" : "")>@item.Name @Html.Raw(item.PriceStrategyDetailList.Count == 0 ? "<i style='color:red;' class='fa fa-times pull-right' title='未设置价格信息'></i>" : "")</a> </td>
                            <td>@Html.Raw(item.IsDefault ? "<i class='fa fa-check'></i>" : "")</td>
                            <td>@Html.Raw(item.IsAgent ? "<i class='fa fa-check'></i>" : "")</td>
                            <td>@item.Comment</td>
                            <td>@item.BeginDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.CreatedDate.ToString("yyyy-MM-dd hh:mm:ss")</td>
                            <td>@item.CreatedBy</td>
                            <td>
                                <a href="/admin/department/edit/@item.Id"><i class="fa fa-edit"></i></a>
                                <a href="#" data-toggle="class">
                                    <i class="fa fa-check text-success text-active"></i>
                                    <i class="fa fa-times text-danger text"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>

</section>
